@model dotNet.Models.Animal

<h2>Ajouter un Animal</h2>

@using (Html.BeginForm("Create", "Animal", FormMethod.Post, new { enctype = "multipart/form-data" })) // Ajout de l'attribut enctype
{
    @Html.AntiForgeryToken() <!-- Ajout du jeton anti-CSRF -->

    <div class="form-group">
        @Html.LabelFor(model => model.nom, new { @class = "control-label" }) // Correction ici
        @Html.EditorFor(model => model.nom, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.type, new { @class = "control-label" }) // Correction ici
        @Html.EditorFor(model => model.type, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.couleur, new { @class = "control-label" }) // Correction ici
        @Html.EditorFor(model => model.couleur, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.couleur, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.pattes, new { @class = "control-label" }) // Correction ici
        @Html.EditorFor(model => model.pattes, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.pattes, "", new { @class = "text-danger" })
    </div>

    <!-- Champ pour le téléchargement de l'image -->
    <div class="form-group">
        <label for="image" class="control-label">Image</label> <!-- Utilisation de label normal -->
        <div class="col-md-10">
            <input type="file" name="image" accept="image/jpeg,image/png" class="form-control" />
            @Html.ValidationMessage("image", "", new { @class = "text-danger" })
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Ajouter</button>
}
