@model dotNet.Models.Animal

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="key" /> <!-- Utilisation de la clÃ© pour identifier l'animal -->

    <div class="form-group">
        <label asp-for="nom"></label>
        <input class="form-control" asp-for="nom" /> <!-- Le nom est maintenant modifiable -->
        <span asp-validation-for="nom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="type"></label>
        <input class="form-control" asp-for="type" />
        <span asp-validation-for="type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="couleur"></label>
        <input class="form-control" asp-for="couleur" />
        <span asp-validation-for="couleur" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="pattes"></label>
        <input class="form-control" asp-for="pattes" />
        <span asp-validation-for="pattes" class="text-danger"></span>
    </div>

        <!-- New field for ImageF (Image URL or Path) -->
    <div class="form-group">
        <label for="ImageF">Lien de l'image</label>
        <input type="text" class="form-control" asp-for="ImageF" />
        <span asp-validation-for="ImageF" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Modifier</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Annuler</a>
</form>
